<%- include ('../../partials/head') %>
  <%- include ('../../partials/header') %>

    <aside class="aside aside--left">
      <h3 class="aside__title">left bar</h3>
    </aside>
    <article class="article">
      <h2 class="article__title">Author Dashboard</h2>
      <% if(count> 1) { %>
        <p>There are <%= authors.length %> authors.</p>

        <ul>
          <% authors.forEach(author=> { %>

            <li>
              <%= author.fname %>
                <%= author.lname %>
            </li>

            <% }) %>
        </ul>

        <% } else { %>
          <p>There are no authors.</p>
          <% } %>
    </article>
    <aside class="aside aside--right">
      <h3 class="aside__title">right bar</h3>
    </aside>

    <%- include('../../partials/footer') %>